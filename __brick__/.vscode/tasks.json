{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "flutter",
            "command": "flutter pub run build_runner build lib/ --delete-conflicting-outputs",
            "presentation": {
                "reveal": "silent", // don't focus on the terminal window
                "clear": true
            },
            "problemMatcher": [
                "$dart-build_runner"
            ],
        },
        {
            "label": "slang",
            "type": "shell",
            "command": "flutter pub run slang",
            "presentation": {
                "reveal": "always", // don't focus on the terminal window
                "clear": true
            },
        },
    ]
}